{
  "name": "mc-block-model-viewer",
  "author": "Pitan",
  "description": "A tool that can render Minecraft block models and export them as images",
  "private": true,
  "version": "0.0.5",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "dist": "electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "adm-zip": "^0.5.16",
    "lucide-react": "^0.564.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/three": "^0.182.0",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^40.4.1",
    "electron-builder": "24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "net.pitan76.mcblockmodelviewer",
    "productName": "Block Model Viewer",
    "directories": {
      "output": "release"
    },
    "win": {
      "icon": "public/icon.ico",
      "artifactName": "BlockModelViewer-Portable-${version}-${arch}.${ext}",
      "target": ["nsis", "zip"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Block Model Viewer",
      "artifactName": "BlockModelViewer-Installer-${version}-${arch}.${ext}"
    },
    "mac": {
      "icon": "public/icon.icns",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "artifactName": "BlockModelViewer-${version}-${arch}.${ext}"
    },
    "linux": {
      "icon": "public/icon.png",
      "target": ["AppImage", "deb"],
      "category": "Development",
      "maintainer": "Pitan <admin@pitan76.net>",
      "artifactName": "BlockModelViewer-${version}-${arch}.${ext}"
    },
    "asar": true,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "public/lang/**/*"
    ]
  }
}
